<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_card_view"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#ffdb58">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipe_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/bakery"
                android:layout_marginStart="20dp"
                android:contentDescription="recipeImage" />

            <TextView
                android:id="@+id/recipe_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/recipe_serving_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recipe_name_tv"
                android:layout_below="@+id/recipe_name_tv"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="@string/servings"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>