<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipe_iv"
                android:layout_width="256dp"
                android:layout_height="150dp"
                android:layout_marginLeft="55dp"
                android:contentDescription="recipeImage" />

            <TextView
                android:id="@+id/recipe_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/recipe_iv"
                android:layout_marginTop="160dp" />

            <Button
                android:id="@+id/button_view_recipe"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:text="@string/button_view_recipe"
                android:layout_alignEnd="@+id/recipe_iv"
                android:layout_alignParentTop="true"
                android:layout_marginTop="190dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>